  "components": {
    "schemas": {
      "AdoptionRequestResponse": {
        "required": [
          "animal_id",
          "customer_id",
          "date_time",
          "id",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "date_time": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "enum": [
              "PENDING",
              "APPROVED",
              "DENIED"
            ]
          },
          "customer_id": {
            "type": "integer",
            "format": "int32"
          },
          "manager_id": {
            "type": "integer",
            "format": "int32"
          },
          "animal_id": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "UpdateAdoptionRequestStatusDto": {
        "required": [
          "id",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
