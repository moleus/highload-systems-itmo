          },
          "503": {
            "description": "Service Unavailable",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "200": {
            "description": "Adoption request status successfully updated",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AdoptionRequestResponse"
                }
              }
            }
          },
          "403": {
            "description": "No authority for this operation",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/AdoptionRequestResponse"
                }
              }
